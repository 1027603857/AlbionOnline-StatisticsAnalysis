                    <!--<wpf:CartesianChart Series="{Binding SeriesDashboardHourValues, IsAsync=True}" XAxes="{Binding XAxesDashboardHourValues}" Margin="0,80,0,0" Height="120" VerticalAlignment="Top" />-->
                    <!--<wpf:CartesianChart Series="{Binding SeriesDashboardFameDailyValues, IsAsync=True}" XAxes="{Binding XAxesDashboardFameDailyValues}" Margin="0,80,0,0" Height="150" VerticalAlignment="Top" />-->
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
