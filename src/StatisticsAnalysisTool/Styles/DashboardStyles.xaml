                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/static_chest.png" Height="26" Width="26" />
                                    <Image Source="/Assets/green_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding StaticCommonWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding StaticCommonMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding StaticCommonYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/static_chest.png" Height="26" Width="26" />
                                    <Image Source="/Assets/blue_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding StaticUncommonWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding StaticUncommonMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding StaticUncommonYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/static_chest.png" Height="26" Width="26" />
                                    <Image Source="/Assets/purple_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding StaticEpicWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding StaticEpicMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding StaticEpicYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/static_chest.png" Height="26" Width="26" />
                                    <Image Source="/Assets/gold_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding StaticLegendaryWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding StaticLegendaryMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding StaticLegendaryYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0,77,0,0">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding TranslationLast7Days, FallbackValue=LAST_7_DAYS}" Foreground="{StaticResource SolidColorBrush.Text.1}" VerticalAlignment="Center" Height="36" />
                            <TextBlock Text="{Binding TranslationLast30Days, FallbackValue=LAST_30_DAYS}" Foreground="{StaticResource SolidColorBrush.Text.1}" VerticalAlignment="Center" Height="36" />
                            <TextBlock Text="{Binding TranslationLast365Days, FallbackValue=LAST_365_DAYS}" Foreground="{StaticResource SolidColorBrush.Text.1}" VerticalAlignment="Center" Height="36" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="20,5" MinWidth="200">
                        <TextBlock Text="{Binding TranslationAvalonianRoads, FallbackValue=AVALONIAN_ROADS}" FontSize="16" Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center" />
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/ava_chest.png" Height="45" Width="45" />
                                    <Image Source="/Assets/green_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding AvalonianRoadCommonWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding AvalonianRoadCommonMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding AvalonianRoadCommonYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/ava_chest.png" Height="45" Width="45" />
                                    <Image Source="/Assets/blue_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding AvalonianRoadUncommonWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding AvalonianRoadUncommonMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding AvalonianRoadUncommonYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/ava_chest.png" Height="45" Width="45" />
                                    <Image Source="/Assets/purple_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding AvalonianRoadEpicWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding AvalonianRoadEpicMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding AvalonianRoadEpicYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/ava_chest.png" Height="45" Width="45" />
                                    <Image Source="/Assets/gold_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding AvalonianRoadLegendaryWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding AvalonianRoadLegendaryMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding AvalonianRoadLegendaryYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="20,5" MinWidth="200">
                        <TextBlock Text="{Binding TranslationHellGates, FallbackValue=HELLGATES}" FontSize="16" Foreground="{StaticResource SolidColorBrush.Text.1}" HorizontalAlignment="Center" />
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/static_chest.png" Height="28" Width="28" />
                                    <Image Source="/Assets/green_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding HellGateCommonWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding HellGateCommonMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding HellGateCommonYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/static_chest.png" Height="28" Width="28" />
                                    <Image Source="/Assets/blue_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding HellGateUncommonWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding HellGateUncommonMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding HellGateUncommonYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/static_chest.png" Height="28" Width="28" />
                                    <Image Source="/Assets/purple_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding HellGateEpicWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding HellGateEpicMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding HellGateEpicYear, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/static_chest.png" Height="28" Width="28" />
                                    <Image Source="/Assets/gold_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding HellGateLegendaryWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
