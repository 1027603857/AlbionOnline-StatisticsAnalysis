                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="This Week" Foreground="{StaticResource SolidColorBrush.Text.1}" VerticalAlignment="Center" Margin="0,49,0,10" />
                                <TextBlock Text="This Month" Foreground="{StaticResource SolidColorBrush.Text.1}" VerticalAlignment="Center" Margin="0,10,0,10" />
                            </StackPanel>
                            <StackPanel Orientation="Vertical" Margin="5,0">
                                <Grid Height="40" Width="40">
                                    <Image Source="/Assets/openworld_chests.png" Height="40" Width="40" />
                                    <Image Source="/Assets/green_glow.png" Height="40" Width="40" Opacity="0.4" />
                                </Grid>
                                <TextBlock Text="{Binding OpenWorldCommonWeek, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
                                <TextBlock Text="{Binding OpenWorldCommonMonth, StringFormat='{}{0:N0}', FallbackValue=0}" Style="{StaticResource LootedChests.Stats.Numbers}" />
