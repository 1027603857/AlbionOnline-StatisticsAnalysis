<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:models="clr-namespace:StatisticsAnalysisTool.Models"
                    mc:Ignorable="d">

    <DataTemplate x:Key="Donation" DataType="{x:Type models:Donation}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Test" Width="100" TextWrapping="Wrap" />
            <TextBlock Text="{Binding Amount}" Width="100" TextWrapping="Wrap" />
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>