                                         Minimum="0" Maximum="{Binding DashboardObject.HighestValue}" Height="20" Margin="0,0,0,0" 
                                         Foreground="{StaticResource SolidColorBrush.Text.5}" Background="#00FFFFFF" BorderThickness="0" Width="Auto" />
