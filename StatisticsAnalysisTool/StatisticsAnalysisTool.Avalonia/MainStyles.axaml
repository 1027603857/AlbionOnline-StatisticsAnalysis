<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="100">
            <!-- Add Controls for Previewer Here -->
			<Button Classes="MainMenu">
                <PathIcon Data="{StaticResource Icon.Button.MainMenu}" />
			</Button>
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->

    <Style Selector="StackPanel.MainMenu">
		<Setter Property="Orientation" Value="Horizontal" />
        <Setter Property="Background" Value="transparent"/>
        <Setter Property="Margin" Value="0,5,0,5"/>
    </Style>

    <Style Selector="Separator.MainMenu">
		<Setter Property="Height" Value="1" />
        <Setter Property="Background" Value="{StaticResource SolidColorBrush.Foreground.2}"/>
        <Setter Property="Margin" Value="0,20,0,10"/>
    </Style>

</Styles>
